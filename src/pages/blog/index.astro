---
import Layout from '../../layouts/Layout.astro';
import CardBlog from '../../components/CardBlog.astro';
const posts = await Astro.glob<Frontmatter>('../posts/*.md');
posts.sort((a, b) => (a.frontmatter.pubDate > b.frontmatter.pubDate) ? -1 : 1);
---

<Layout title='Blog'>
    <h1>Blog Page</h1>
    <form class="text-black border-2 rounded-lg border-black p-4">
      <div class="flex flex-col">
        <label for="search">Search the Blogs</label>
        <input class="border-2 border-black rounded-md p-1 font-mono" type="search" required min="2" max="30" name="search" id="search" placeholder="Enter the Search Term..">
      </div>
    </form>
    <ul class="flex flex-col gap-1 my-5">
      {posts.map(post => <li><CardBlog url={post.url} object={post.frontmatter} /></li>)}
    </ul>
</Layout>

<script>
  const form = document.querySelector("form");
  const posts = document.querySelectorAll(".blogcard") as NodeListOf<HTMLElement>;
  form?.addEventListener("submit",(e) => {
    e.preventDefault();
    const data = new FormData(form);
    const search = data.get("search");
    console.log(search);
    posts.forEach((post) => {
      const title = post.children[0].children[0].children[1].children[0].innerHTML.toLowerCase();
      const tags = post.children[0].children[1].getElementsByTagName('li');
      const searchtext = search.toString().toLowerCase();
      var havetag = false;
      console.log(tags);
      for (var i = 0; i < tags.length; i++) {
        var textContent = tags[i].textContent || tags[i].innerText;
        if(textContent.includes(searchtext)){
          havetag = true;
        }
      }

      if(title.includes(searchtext) || havetag){
        post.style.display = "block";
      } else{
        post.style.display = "none";
      }
    }
    )}
  );
  document.addEventListener("DOMContentLoaded", () => {
    posts.forEach((post,ind) => {
      if(ind < 9){
        post.style.display = "block";
      }else{
        post.style.display = "none";
      }
    })
  })
</script>